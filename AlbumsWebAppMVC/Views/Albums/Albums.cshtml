@model IEnumerable<AlbumsWebAppMVC.Models.AlbumViewModel>
@{
    ViewBag.Title = "Álbumes";
}

<script src="~/Scripts/jquery-3.5.1.min.js" type="text/javascript"></script>
<script src="~/Scripts/javascript/albums.js" type="text/javascript"></script>

<h2>@ViewBag.Title</h2>

<table id="albumsTable" class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nombre del álbum</th>
            <th scope="col">Descripción</th>
            <th scope="col">Fecha de creación</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var album in Model)
        {
        <tr>
            <th scope="row">@album.Number</th>
            <th>@album.Name</th>
            <th>@album.Author</th>
            <th>@album.CreationDate</th>
            <th>
                <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("GetAlbumPhotos", "Photos", new { albumId= album.Number })'">Ver álbum</button>
            </th>
        </tr>
        }
    </tbody>
</table>